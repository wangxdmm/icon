{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "module": "ES2022",
    "tsBuildInfoFile": "./node_modules/.rd_cache",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "types": [
      "node",
      "vitest/globals"
    ],
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "rollup.config.ts",
    "src",
    "tests",
    "__tests__",
    "**/package.json"
  ]
}